<%- contentFor('content') %>

    <div id="admin-panel" class="container-fluid" ng-controller="adminCtrl">
        <h1 class="title">Library Management</h1>

        <div class="row-fluid">
            <div class="span6">
                <button type="button" class="btn btn-primary" ng-click="addBookModal()">Add Book</button>
            </div>
            <div class="span6 text-right">
                <span>Search:<span>
                <input type="text" ng-model="searchBook" / >
            </div>
        </div>

        <div class="row-fluid">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Book Name</th>
                        <th>Author</th>
                        <th>Is Available?</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="book in booksPerPage | filter:searchBook | limitTo:itemsPerPage">
                        <td>
                            <span>{{ book.name }}</span>
                        </td>
                        <td>
                            <span>{{ book.author }}</span>
                        </td>
                        <td>
                            <span>{{ book.available ? 'Yes' : 'No' }}</span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" ng-click="statusBookModal( book )">Change Availability</button>
                            <button type="button" class="btn btn-default" ng-click="editBookModal( book )">Edit</button>
                            <button type="button" class="btn btn-danger" ng-click="deleteBookModal( book.id )">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <ul uib-pagination total-items="totalItems" items-per-page="itemsPerPage" ng-model="currentPage" ng-change="setBooksForPage()"></ul>
        </div>
    </div>

<%- %>
